{
  "compilerOptions": {
    // Target ES2020 for modern browser support
    "target": "ES2020",
    
    // Use ES modules
    "module": "ES2020",
    "moduleResolution": "node",
    
    // Output directory for compiled JavaScript
    "outDir": "./dist",
    
    // Source maps for debugging
    "sourceMap": true,
    
    // Strict type checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // Additional checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    // Module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
    // DOM and ES libraries
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    // Allow importing .js files (for compiled output)
    "allowJs": false,
    
    // Skip lib check for faster compilation
    "skipLibCheck": true,
    
    // Preserve JSX (not used, but included for completeness)
    "jsx": "preserve"
  },
  
  // Include all TypeScript files in src
  "include": [
    "src/**/*"
  ],
  
  // Exclude node_modules and dist
  "exclude": [
    "node_modules",
    "dist"
  ]
}